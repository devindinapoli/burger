<div class="row">
  <!-- Left side (ready to eat) -->
  <div class="col xs-4">
    <h4>Ready to eat!</h4>
    <div id="ready_to_eat">
        
        <!-- burgers go here that are inserted via form -->
      {{#each burgers}}
        {{#unless devoured}}
        <form action="burger/devour/{{id}}" method="POST">
          <div class="input-group">
            <li class="form-control burger">{{id}}. {{burger_name}}</li>
              <span class="input-group-btn">
                <button class="btn btn-success devour-button" type="submit">Devour It!</button>
              </span>
              <br>
          </div>
        </form>
        {{/unless}}
      {{/each}}

    </div>
  </div>
  <div class="col sm-4">

    <img src="/assets/patty.png" class="patty">

  </div>

  <!--Right Side (already eaten)-->
  <div class="col sm-4">
    <h4>Already eaten!</h4>
    <div id="already_eaten">

      <!--Add burgers within form..-->
      {{#each burgers}}
        {{#if this.devoured}}
          <div class="input-group">
            <li class="form-control burger">{{this.id}}. {{this.burger_name}}</li>
          </div>
        {{/if}}
      {{/each}}

    </div>
  </div>
</div>

