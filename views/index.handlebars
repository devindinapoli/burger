<div class="row">
  <center>
    <!-- Left side (ready to eat) -->
    <div>
      <h4>Ready to eat!</h4>
      <div id="ready_to_eat">
          
          <!-- burgers go here that are inserted via form -->
        {{#each burgers}}
          {{#unless devoured}}
          <form action="burger/eaten/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

  
    <div>
      <h4>Already eaten!</h4>
      <div id="already_eaten">

        <!--INSERT BURGERS-->
        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>